<?php $__env->startSection('main'); ?>
<h1>Welcome to my bookshop</h1>
<p><?php echo link_to_route('books.create', 'Create new book'); ?></p>

<p><?php echo link_to_route('logout','Logout'); ?></p>
<?php if($booksList->count()): ?>
<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>ISBN</th>
        <th>Title</th>
        <th>Author</th>
        <th>Publisher</th>
        <th>Language</th>
    </tr>
    </thead>

    <tbody>
    <?php foreach($booksList as $book): ?>
    <tr>
      <td><?php echo $book->id; ?></td>
      <td><?php echo $book->isbn; ?></td>
      <td><?php echo $book->title; ?></td>
      <td><?php echo $book->author; ?></td>
      <td><?php echo $book->publisher; ?></td>
      <td><?php if($book->language==1): ?><?php echo 'English'; ?> <?php elseif($book->language==2): ?><?php echo 'hindhi'; ?> <?php else: ?> <?php echo 'malayalam'; ?>

                <?php endif; ?></td>
      <td><?php echo link_to_route('books.show', 'Read', array($book->id),
                array('class' => 'btn btn-primary')); ?></td>
      <td><?php echo link_to_route('books.edit', 'Update', array($book->id),
                array('class' => 'btn btn-warning')); ?></td>
      <td>
        <?php echo Form::open(array('method'=> 'DELETE', 'route' =>
              array('books.destroy', $book->id))); ?>

        <?php echo Form::submit('Delete', array('class' => 'btn btn-danger')); ?>

        <?php echo Form::close(); ?>

      </td>
    </tr>
    <?php endforeach; ?>
    </tbody>
</table>
<?php else: ?>
There are no books
<?php endif; ?>
<?php $__env->stopSection(); ?>
<?php echo $__env->make('books/book', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>