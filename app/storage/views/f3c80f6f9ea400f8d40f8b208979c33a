<?php $__env->startSection('main'); ?>
<h1>Edit Book</h1>
<?php echo Form::model($book, array('method' => 'PATCH', 
'route' =>array('books.update', $book->id))); ?>

<ul>
    <li>
        <?php echo Form::label('ISBN', 'ISBN:'); ?>

        <?php echo Form::text('isbn'); ?>

    </li>
    <li>
        <?php echo Form::label('Title', 'Title:'); ?>

        <?php echo Form::text('title'); ?>

    </li>
    <li>
        <?php echo Form::label('Author', 'Author:'); ?>

        <?php echo Form::text('author'); ?>

    </li>
    <li>
        <?php echo Form::label('Publisher', 'Publisher:'); ?>

        <?php echo Form::text('publisher'); ?>

    </li>
    <li>
        <?php echo Form::label('Language', 'Language'); ?>

        <?php echo Form::select('language', array('0' => 
          'Select a Level', '1' => 'English', '2' => 'Spanish'), 
           null, array('class' => 'form-control')); ?>

    </li>
    <li>
        <?php echo Form::submit('Update', array('class' => 
                 'btn btn-warning')); ?>

        <?php echo link_to_route('books.show', 'Cancel', $book->
                  id,array('class' => 'btn btn-danger')); ?>

    </li>
</ul>
<?php echo Form::close(); ?>

<?php if($errors->any()): ?>
<ul>
    <?php echo implode('',$errors->all('<li class="error">:message</li>')); ?>

</ul>
<?php endif; ?>
<?php $__env->stopSection(); ?>
<?php echo $__env->make('books/book', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>