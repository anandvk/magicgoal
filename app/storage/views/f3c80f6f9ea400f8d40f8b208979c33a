'route' =>array('books.update', $book->id))); ?>

 <div class="form-group">

    <div class="form-group">
        <?php echo Form::label('ISBN', 'ISBN:'); ?> <br>
        <?php echo Form::text('isbn',null,array('class'=>'form-control')); ?>

    </div>
  
  <div class="form-group">
  
        <?php echo Form::label('Title', 'Title:'); ?> <br>
        <?php echo Form::text('title',null,array('class'=>'form-control')); ?>

        </div>
  
  <div class="form-group">
        <?php echo Form::label('Author', 'Author:'); ?> <br>
        <?php echo Form::text('author',null,array('class'=>'form-control')); ?>

        </div>
  
  <div class="form-group">
        <?php echo Form::label('Publisher', 'Publisher:'); ?> <br>
        <?php echo Form::text('publisher',null,array('class'=>'form-control')); ?>

        </div>
  
  <div class="form-group">
        <?php echo Form::label('Language', 'Language'); ?> <br>
        <?php echo Form::select('language', array('0' => 
