           null, array('class' => 'form-control')); ?>

           </div>
           <br>
  <div class="form-group">
        <?php echo Form::submit('Update', array('class' =>  
                 'btn btn-warning')); ?>

        <?php echo link_to_route('books.show', 'Cancel', $book->
                  id,array('class' => 'btn btn-danger')); ?>

    </div>

</div>
    
<?php echo Form::close(); ?>

<?php if($errors->any()): ?>
<ul>
    <?php echo implode('',$errors->all('<li class="error">:message</li>')); ?>

</ul>
<?php endif; ?>
<?php $__env->stopSection(); ?>
<?php echo $__env->make('books/book', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>