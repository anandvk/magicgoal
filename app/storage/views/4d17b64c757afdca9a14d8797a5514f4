<?php endif; ?>
</ul>
</div><!--/.nav-collapse -->
</div>
</div>
</div>

<div class="container">
<div class="row">
<?php echo $__env->yieldContent(‘content’); ?>
</div>
<?php echo $__env->yieldContent(‘pagination’); ?>
</div><!--/container-->

