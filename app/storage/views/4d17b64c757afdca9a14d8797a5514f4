<?php echo HTML::style('css/bootstrap.min.css'); ?>

	<?php echo HTML::style('css/bootstrap-theme.min.css'); ?>

<style>
body {
padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
}
</style>
<?php echo HTML::script('js/bootstrap.min.js'); ?>

</head>
<body>
<div class="navbar navbar-fixed-top">
<div class="navbar-inner">
<div class="container-fluid">
<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
<span class="icon-bar"></span>
<span class="icon-bar"></span>
<span class="icon-bar"></span>
</a>
<a class="brand" href="<?php echo URL::base(); ?>">Blog</a>
<div class="btn-group pull-right">

<?php if( Auth::guest() ): ?>
<a class="btn" href="<?php echo URL::to(‘login’); ?>">
<i class="icon-user"></i> Login
</a>
<?php else: ?>
Welcome, <strong><?php echo HTML::link(‘admin’, Auth::user()->username); ?> </strong> |
<?php echo HTML::link(‘logout’, ‘Logout’); ?>

<?php endif; ?>

</div>
<div class="nav-collapse">
<ul class="nav">
<li><a href="<?php echo URL::base(); ?>">Home</a></li>
